{{>layouts/header}}
{{>layouts/nav}}
<!-- Page content-->
<div class="container mt-5">
    <form>
        <div class="form-group">
            <label for="inputAddress">아이디</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="아이디를 입력해주세요.">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">비밀번호</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="비밀번호를 입력해주세요.">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">비밀번호 확인</label>
                <input type="password" class="form-control" id="inputPassword4" placeholder="비밀번호를 확인해주세요.">
            </div>
        </div>

        <p class="alert-link">주소</p>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Steet</label>
                <!-- <select id="inputState" class="form-control">
                  <option selected>Choose...</option>
                  <option>...</option>
                </select> -->
                <input type="text" class="form-control" id="inputStreet">
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    개인정보 동의
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">회원가입</button>
    </form>
</div>
{{>layouts/footer}}