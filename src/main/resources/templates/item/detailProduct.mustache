{{>layouts/nav}}
<!-- section card-->
<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="id">상품 번호 : </label>
                    <input type="number" class="form=control" id="id" value="{{item.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="id">상품명 : </label>
                    <input type="text" class="form=control" id="name" value="{{item.name}}">
                </div>
                <div class="form-group">
                    <label for="id">상품 가격 : </label>
                    <input type="number" class="form=control" id="price" value="{{item.price}}">
                </div>
                <div class="form-group">
                    <label for="id">상품 수량 : </label>
                    <input type="number" class="form=control" id="stockQuantity" value="{{item.stockQuantity}}">
                </div>
                <div class="form-group">
                    <label for="id">제조사 : </label>
                    <input type="text" class="form=control" id="company" value="{{item.company}}">
                </div>
            </form>
                <button type="button" id="btn-itemUpdate" class="btn btn-success">상품 수정하기</button>
                <button type="button" id="btn-itemRemove" class="btn btn-danger">상품 삭제하기</button>
        </div>
    </div>
</div>
